{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strict": true,
    "stripInternal": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "jest",
    "../e2e",
    "jest.config.js",
    "config",
    "src/**/*.spec.ts"
  ]
}
